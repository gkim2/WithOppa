<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leftslidemenu"
    android:layout_width="273dp"
    android:layout_height="match_parent"
    android:background="#ffd6fe"
    android:orientation="vertical" 
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
   
    >
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="dummy data\r\n 프로필이 출력 되는 부분"
            android:id="@+id/profile"/>
    </LinearLayout>
    
    
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#308732"
	    android:paddingBottom="3dp"
	    android:orientation="horizontal">
	    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="즐겨찾기"
        android:background="#ffd6fe"/>
	</LinearLayout>
    
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#308732"
	    android:paddingBottom="1dp"
	    android:orientation="horizontal">
		    <TextView
		        android:id="@+id/test1_btn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:background="#ffd6fe"
				android:clickable="true"
				android:focusable="true"
		        android:text="임시글쓰기로 이동합니다."
		        android:textSize="15sp"
		        android:textColor="#305d87" 
		        android:layoutDirection="ltr"
		        android:padding="10dp"		        
		        />
    </LinearLayout>
    
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#308732"
	    android:paddingBottom="1dp"
	    android:orientation="horizontal">
		    
		    <TextView
		        android:id="@+id/test2_btn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:background="#ffd6fe"
				android:clickable="true"
				android:focusable="true"
		        android:text="test2"
		        android:textSize="15sp"
		        android:textColor="#305d87" 
		        android:padding="10dp"	
		        />
       </LinearLayout>
  
</LinearLayout>